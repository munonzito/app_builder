# Firebase Client (Public)
NUXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Firebase Admin (Server)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# AI Models (Priority: OpenRouter > Anthropic > OpenAI)
# OpenRouter - Recommended for testing with free models
OPENROUTER_API_KEY=your-openrouter-key
# Anthropic
ANTHROPIC_API_KEY=your-anthropic-key
# OpenAI
OPENAI_API_KEY=your-openai-key

# Default model (use OpenRouter model names like 'xiaomi/mimo-v2-flash:free')
DEFAULT_AI_MODEL=xiaomi/mimo-v2-flash:free

# Development flags
USE_FIREBASE_EMULATOR=false
USE_MOCK_AI=false

# ===========================================
# Droid + E2B Integration (Optional)
# ===========================================
# Enable to use Factory AI Droid in E2B sandboxes
# instead of the built-in agent

# E2B - Cloud sandbox infrastructure
# Get your API key from: https://e2b.dev/dashboard?tab=keys
E2B_API_KEY=your-e2b-api-key
E2B_TEMPLATE_ID=droid-app-builder

# Factory AI - Required for droid authentication
# Get your API key from: https://app.factory.ai/settings/api-keys
FACTORY_API_KEY=your-factory-api-key

# Azure OpenAI - BYOK configuration for droid
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/v1
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_MODEL=gpt-4o
